{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "/path/to/file" },
        { "path": "$APPDATA/file" }
      ]
    },
    {
      "identifier": "dialog:allow-open"
    },
    {
      "identifier": "dialog:allow-confirm"
    },
    {
      "identifier": "dialog:allow-message"
    }
  ]
}
